# ============================================
# APLICAÇÃO
# ============================================
APP_NAME="USPS Label Generator"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# ============================================
# BANCO DE DADOS - MySQL Remoto
# ============================================
DB_CONNECTION=mysql
DB_HOST=seu-servidor-mysql-remoto.com
DB_PORT=3306
DB_DATABASE=nome_do_banco
DB_USERNAME=usuario_mysql
DB_PASSWORD=senha_mysql

# ============================================
# EMAIL (Para verificação e recuperação de senha)
# ============================================
# Opção 1: SMTP (Gmail, SendGrid, Mailgun, etc.)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=seu_usuario_smtp
MAIL_PASSWORD=sua_senha_smtp
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@seudominio.com"
MAIL_FROM_NAME="${APP_NAME}"

# Opção 2: Mailpit (para desenvolvimento local)
# MAIL_MAILER=smtp
# MAIL_HOST=localhost
# MAIL_PORT=1025
# MAIL_USERNAME=null
# MAIL_PASSWORD=null
# MAIL_ENCRYPTION=null

# ============================================
# OAUTH GOOGLE
# ============================================
# Obtenha essas credenciais em: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=seu_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=seu_google_client_secret
GOOGLE_REDIRECT_URI=${APP_URL}/auth/google/callback

# ============================================
# EASYPOST API
# ============================================
# API Key de teste: https://www.easypost.com/docs/api#test-api-keys
# API Key de produção: https://www.easypost.com/account/api-keys
EASYPOST_API_KEY=easypost_test_key_aqui_ou_easypost_live_key_aqui

# ============================================
# SESSÃO E CACHE
# ============================================
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=file
CACHE_PREFIX=

# ============================================
# REDIS (Opcional - se usar para cache/sessão)
# ============================================
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# ============================================
# QUEUE (Opcional - para jobs assíncronos)
# ============================================
QUEUE_CONNECTION=sync
# QUEUE_CONNECTION=database
# QUEUE_CONNECTION=redis

# ============================================
# LOGGING
# ============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# BROADCASTING (Opcional)
# ============================================
# BROADCAST_CONNECTION=log
# BROADCAST_DRIVER=log

# ============================================
# FILESYSTEM
# ============================================
FILESYSTEM_DISK=local
# FILESYSTEM_DISK=s3 (se usar AWS S3)

# ============================================
# AWS S3 (Opcional - se usar para armazenar arquivos)
# ============================================
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# NOTAÇÕES IMPORTANTES
# ============================================
# 1. NUNCA commite o arquivo .env no repositório
# 2. Após criar o .env, execute: php artisan key:generate
# 3. Para OAuth Google, configure as URLs autorizadas no Google Cloud Console
# 4. Use API key de TESTE do EasyPost durante desenvolvimento
# 5. Para produção, altere APP_ENV=production e APP_DEBUG=false
# 6. Configure MAIL_FROM_ADDRESS com um email válido do seu domínio
